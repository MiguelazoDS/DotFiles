#!/usr/bin/env bash

state="$(mocp -Q %state 2>&1)"

if [[ ! "$state" =~ "FATAL" ]]; then
	if [ "$(mocp -Q %state)" != "STOP" ];then
	    SONG=$(mocp -Q %song)
	        
	    if [ -n "$SONG" ]; then
	        echo "$SONG - $(mocp -Q %album)"
	    else
			name=$(basename "$(mocp -Q %file)")
			song_name=$(echo "$name" | cut -d '.' -f 1)
			printf "<icon=music.xpm/> %s" "$song_name"
	    fi
		
		if [ "$1" == "moc" ]; then
			notify-send.sh -R id_file -i multimedia-player "$song_name"
		fi
	else
	    echo ""
	fi
fi
