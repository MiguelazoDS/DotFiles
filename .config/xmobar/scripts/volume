#!/usr/bin/env bash

MUTE=$(pamixer --get-mute)

if [ "$MUTE" == "true" ]; then
       COLOUR="#c41818"
else
 	COLOUR="#bac8cf"
fi

VALUE=$(pamixer --get-volume)

if [ "$MUTE" == "false" ]; then
	if [[ $((VALUE)) -ge 0 && $((VALUE)) -le 33 ]]; then
		echo " <fc=$COLOUR>$VALUE</fc>%"
	elif [[ $((VALUE)) -gt 33 && $((VALUE)) -le 66 ]]; then
		echo " <fc=$COLOUR>$VALUE</fc>%"
	else
		echo " <fc=$COLOUR>$VALUE</fc>%"
	fi
else
	echo "ﱝ <fc=$COLOUR>Mute</fc>"
fi
