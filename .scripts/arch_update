#!/usr/bin/env bash

recompile=$HOME/.config/xmonad/recompile

function update {
    yay -Syy && yay -Syyu --devel --noconfirm; ${recompile}
}

function clean {
    yay -Sc --noconfirm
    temp=$(yay -Qtdq | tr '\n' ' ')
    if [ -n "$temp" ]; then
        printf "\nThe following packages are going to be removed\n%s" "$temp"
        yay -Rns $(echo "$temp") --noconfirm
        paccache -r
    fi
    setxkbmap es
    $HOME/.scripts/mouse_accel
}

function ignore {
    pkgs="$(yay -Qsq "$1" | tr '\n' ',')"
    yay -Syyu --ignore $pkgs --devel --noconfirm; ${recompile}
}

function usage {
    printf "Usage: \n\tarch_update [Options]\n"
    printf "\nOptions: \n"
    printf "\t-c --clean \n"
    printf "\t-i <value> --ignore <value>\n"
}

args=("$@")

if [ "$#" -lt 2 ]; then
    if [ "$#" -eq 0 ]; then
        args+=("-a")
    elif [ ! "$1" = "-c" ]; then
        usage
        exit 0
    fi
fi

set -- ${args[*]}

short=aci:
long=clean,ignore:

if ! getopt -n "$0" -o $short --long "$long" -- "$@" >/dev/null
then
    exit 1
fi

while true;
do
    case "$1" in
        -a | --all )
            shift
            update
            clean
            shift
            ;;
        -c | --clean )
            shift
            clean
            shift
            ;;
        -i | --ignore )
            shift
            regex=$1
            ignore "$regex"
            clean
            shift
            ;;
        * )
            shift
            break
            ;;
    esac
done
