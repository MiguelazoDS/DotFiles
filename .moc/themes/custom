#HEX->255/255/255(RGB)->1000/1000/1000
# Convertion factor 3.921568627451

#orange="#b04c0b"=rgb(176, 76, 11)=690,298,43
#blue_gray="#386eab"=rgb(56, 110, 171)=220,431,671
#magenta="#7c76cf"=rgb(124, 118, 207)=486,463,812
#soft_green="#8d8f18"=rgb(141, 143, 24)=553,561,94
#error_red="#b32727"=rgb(179, 39, 39)=702,153,153
#soft_yellow="#db9a27"=rgb(219, 154, 39)=859,604,153

colordef magenta = 690 298 43 #Orange
colordef blue = 220 431 671
colordef cyan = 486 463 812 #Purple
colordef green = 553 561 94
colordef red = 702 153 153
colordef yellow = 859 604 153

