marked_selected_file = red  black bold
info                 = blue   default normal
selected_info        = blue   black bold
marked_info          = red  default normal
marked_selected_info = red  black bold
status               = red  default normal
title                = yellow default bold
state                = blue  default bold
current_time         = green  default normal
time_left            = red  default normal
total_time           = magenta  default bold
time_total_frames    = blue  default bold
sound_parameters     = magenta  default bold
legend               = green  default bold
disabled             = black  default bold
enabled              = cyan  default bold
empty_mixer_bar      = magenta  black bold
filled_mixer_bar     = black  green bold
empty_time_bar       = magenta  black bold
