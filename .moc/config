# Sound driver - OSS, ALSA, JACK, SNDIO (on OpenBSD) or null (only for
# debugging).  You can enter more than one driver as a colon-separated
# list.  The first working driver will be used.
SoundDriver = ALSA:OSS:JACK

# Set playback toggles.
Repeat = yes
Shuffle = yes

# Show time played as a percentage in the time progress bar.
ShowTimePercent = yes

# Theme file to use.  This can be absolute path or relative to
# /usr/share/moc/themes/ (depends on installation prefix) or
# ~/.moc/themes/ .
#
# Example:    Theme = laras_theme
#
Theme = custom

# The theme used when running on an xterm.
#
# Example:    XTermTheme = transparent-background
#
XTermTheme = custom

# How fast to seek (in number of seconds per keystroke).  The first
# option is for normal seek and the second for silent seek.
SeekTime = 5
SilentSeekTime = 10

# Display full paths instead of just file names in the playlist.
PlaylistFullPaths = no
OnSongChange = "/home/miguel/.config/xmobar/scripts/moc moc"

# Self-describing ModPlug options (with 'yes' or 'no' values).
ModPlug_Surround = yes
ModPlug_MegaBass = yes
ModPlug_BassAmount = 80          # 0 (quiet) to 100 (loud).
ModPlug_BassRange = 10            # Cutoff in Hz (10-100).
ModPlug_SurroundDepth = 70        # Surround level 0(quiet)-100(heavy).
ModPlug_SurroundDelay = 5        # Surround delay in ms, usually 5-40ms.
